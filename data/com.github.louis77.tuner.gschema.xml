<?xml version="1.0" encoding="UTF-8"?>

<schemalist>
    <schema path="/com/github/louis77/tuner/" id="com.github.louis77.tuner">
        <key name="pos-x" type="i">
            <default>360</default>
            <summary>Horizontal position</summary>
            <description>Saved horizontal position of main window</description>
        </key>
        <key name="pos-y" type="i">
            <default>640</default>
            <summary>Vertical position</summary>
            <description>Saved vertical position of main window</description>
        </key>
        <key name="window-width" type="i">
            <default>1040</default>
            <summary>Window width</summary>
            <description>Saved width of main window</description>
        </key>
        <key name="window-height" type="i">
            <default>400</default>
            <summary>Window height</summary>
            <description>Saved height of main window</description>
        </key>
        <key name="starred-stations" type="as">
            <default>[]</default>
            <summary>Starred stations</summary>
            <description>All station starred by the user</description>
        </key>
        <key name="do-not-track" type="b">
            <default>false</default>
            <summary>Do not track</summary>
            <description>If enabled, do not send usage information to radio-browser.org</description>
        </key>
        <key name="excluded-countries" type="as">
            <default>[]</default>
            <summary>Excluded Countries</summary>
            <description>A list of ISO-3166-2 country codes where we don't show you stations from</description>
        </key>
        <key name="dark-mode" type="b">
            <default>false</default>
            <summary>Dark mode</summary>
            <description>If enabled, the dark variant of your current theme will be used</description>
        </key>        
    </schema>
</schemalist>
